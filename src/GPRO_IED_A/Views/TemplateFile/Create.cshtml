
@{
    ViewBag.Title = "Tạo | Chỉnh Sửa Thông Tin Biểu Mẫu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<input type="hidden" id="tf_Id" value="@ViewData["Id"]" />

<div class="">
    <div class="modal-header">
        <h4 class="modal-title">Thông Tin Biểu Mẫu</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <input type="hidden" id="tf_Id" data-bind="value: Id" />
            <div class="form-group col-md-4">
                <label class=" control-label  ">Tên Biểu Mẫu </label><span style="color:red"> *</span>
                <div>
                    <input type="text" class="form-control" id="tf_name" placeholder="Tên Biểu Mẫu">
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class=" control-label  ">Mã Biểu Mẫu </label>
                <div>
                    <input type="text" class="form-control" id="tf_index" disabled>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class=" control-label  ">Trạng Thái Duyệt</label>
                <div>
                    <input type="checkbox" id="tf_isapprove" data-width="130" data-toggle="toggle" data-on="Đã Duyệt" data-off="Chưa Duyệt">
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group col-md-4">
                <label class=" control-label ">Người Duyệt </label>
                <div class="select-box">
                    <select employee id="tf_approveduser"></select>
                    <i re_employee class="fa fa-refresh clickable red"></i>
                    <a @*href="@AppGlobal.GetHRMUrl/Employee/Create/0" target="_blank"*@><i class="fa fa-plus-circle clickable blue"></i></a>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class=" control-label  ">Ngày Duyệt </label>
                <div>
                    <input type="text" class="form-control" id="tf_approveddate" placeholder="Ngày Duyệt" style="width: 269px">
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class=" control-label  ">Ghi Chú </label>
                <textarea class="form-control" id="tf_note"></textarea>
            </div>

            <div class="clearfix"></div>
        </div>
        <div class="form-group col-md-12">
            <label class=" control-label  ">Nội Dung</label><br />
            <textarea name="editor1" id="editor1" rows="10" cols="80"></textarea>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" id="tf_btnBack" class="btn btn-warning" @*style="display:none"*@><span><i class="glyphicon glyphicon-arrow-left"></i></span>  Quay lại danh sách </button>
    <button type="button" id="tf_btnSave" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-floppy-o"></i> Lưu lại </button>
</div>

<div id="html_content" style="display:none"></div>

<script src="~/Scripts/IED/TemplateFie/template-file-create.js"></script>