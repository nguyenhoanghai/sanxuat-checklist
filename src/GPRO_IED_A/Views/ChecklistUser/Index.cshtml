<style>
    .modal-full {
        width: 100%;
        padding: 0 !important;
    }

    #div_web object {
        width: 100%;
        height: 390px;
    }


    .main-box {
        box-sizing: border-box;
        border-radius: 3px;
        position: relative;
        margin: 0 4px 4px 0;
        min-width: 0;
    }

        .main-box a {
            display: flex;
            font-weight: 700;
            height: 36px;
            overflow: hidden;
            padding: 0;
            position: relative;
            text-decoration: none;
            -webkit-user-select: none;
            user-select: none;
            -webkit-user-drag: none;
        }

            .main-box a .div-1 {
                background-size: cover;
                background-position: center center;
                position: absolute;
                width: 100%;
                height: 36px;
                opacity: 1;
                border-radius: 3px;
                background-color: rgb(201 227 243);
            }

            .main-box a .div-2 {
                display: inline-block;
                flex: 0 0 auto;
                background-size: cover;
                border-radius: 3px 0 0 3px;
                height: 36px;
                width: 36px;
                position: relative;
                opacity: 0.7;
                background-color: rgb(0, 121, 191);
            }

            .main-box a .div-3 {
                display: flex;
                position: relative;
                flex: 1;
                width: 100%;
                padding: 9px 0 9px 10px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

                .main-box a .div-3 div {
                    display: block;
                    padding-right: 12px;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
                    color: #172B4D;
                    font-weight: bold;
                }
</style>


