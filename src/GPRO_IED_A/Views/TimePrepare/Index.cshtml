
@{
    ViewBag.Title = "Thời Gian Chuẩn bị";
    Layout = null;
} 
<script src="~/Scripts/IED/TimePrepare/TP_Index.js"></script>
<div id="jtable-TimeTypePrepare" class="table-center"></div> 

<!-- Time Type Prepare -->
<div class="modal   fade " id="popup_TimeTypePrepare" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" cancel-type class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin Loại Thời Gian</h4>
            </div>
            <div class="modal-body form-inline">
                <div class="container-fluid">
                    <input class="form-control" data-bind="value: Id" type="hidden" />
                    <div class="form-group">
                        <label class="control-label">Tên Loại Thời Gian<span class="required-class">*</span></label>
                        <input class="form-control" id="name-timetype" data-bind="value: Name" type="text" placeholder="Nhập Tên Loại Thời Gian..." />
                    </div>
                    <div class="form-group hide">
                        <label class="control-label">Mã Loại Thời Gian</label><br />
                        <input class="form-control" id="timetypecode" data-bind="value: Code" type="text" placeholder="Nhập Mã Loại Thời Gian..." />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Hình thức sử dụng</label><br />
                        <div>
                            <input type="checkbox" id="timetypeisPublic" data-width="130" data-toggle="toggle" data-on="Khác" data-off="Nội bộ">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Mô Tả</label><br />
                        <textarea id="timetypedes" data-bind="value: Description"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" cancel-type class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button" save-type class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu lại </button>
            </div>
        </div>
    </div>
</div>

<!-- Time Prepare -->
<div class="modal   fade" id="popup_TimePrepare" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog   ">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" cancel-time class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin Thời Gian chuẩn bị</h4>
            </div>
            <div class="modal-body form-inline">
                <div class="container-fluid">
                    <div class="col-md-4 form-group">
                        <input class="form-control" data-bind="value: Id" type="hidden" />
                        <div>
                            <label class="control-label">Tên Thời Gian <span class="required-class">*</span></label>
                            <input class="form-control" id="name-time" data-bind="value: Name" type="text" placeholder="Nhập Tên Thời Gian..." />
                        </div>
                    </div>
                    <div class="col-md-4 form-group hide">
                        <label class="control-label">Mã Thời Gian</label><br />
                        <input class="form-control" data-bind="value: Code" type="text" placeholder="Nhập Mã Thời Gian..." />
                    </div>
                    <div class="col-md-4 form-group">
                        <label class="control-label">Loại Thời Gian <span class="required-class">*</span></label><br />
                        <select id="tptimeTypeId" class="form-control">
                            <option value="0"> Chọn Loại Thời Gian </option>
                        </select>
                        <i retype style="cursor:pointer" class="fa fa-sync-alt"></i>
                    </div>
                    <div class="col-md-4 form-group">
                        <label class="control-label">Chỉ số TMU</label><br />
                        <input class="form-control" type="text" id="tpTMU" onkeypress=" return isNumberKey(event)" />
                    </div>
                    <div class="col-md-4 form-group">
                        <label class="control-label">Mô Tả</label><br />
                        <textarea class="form-control" data-bind="value: Description"></textarea>
                    </div>
                    <div class="clearfix"> </div>

                </div>
            </div>
            <div class="modal-footer">
                <button cancel-time aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button save-time class="btn btn-primary">
                    <div class="button-image image-save"></div>
                    Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>

<!--  search  -->
<div class="modal fade " id="popup_TimeTypePrepare-search" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modalsmall">
        <div class=" modal-content">
            <div class="modal-header">
                <button type="button" class="close" closetype data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Tìm Kiếm</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="rows">
                        <label class="control-label">Từ Khóa</label>
                        <input class="form-control" id="tpkeyword" type="text" placeholder="Nhập thông tin bạn cần tìm ..." />
                    </div>
                    <div class="rows">
                        <div>
                            <label class="control-label">Bạn muốn tìm theo ?</label>
                            <select class="form-control" id="tpsearchBy">
                                <option value="1">Tên Loại </option>
                                @*<option value="2">Mã Loại</option>*@
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button closetype aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button searchtype class="btn btn-primary">
                    <div class="button-image image-search"></div>
                    Tìm Kiếm
                </button>
            </div>
        </div>
    </div>
</div>


